{
  "info": {
    "name": "Food Ordering App API",
    "_postman_id": "00000000-0000-0000-0000-000000000000",
    "description": "Basic Postman collection for key endpoints (update {{baseUrl}} to your backend)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"username\": \"nick.fury\", \"password\": \"password123\" }" },
            "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
          }
        }
      ]
    },
    {
      "name": "Restaurants",
      "item": [
        {
          "name": "List Restaurants",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/restaurants", "host": ["{{baseUrl}}"], "path": ["api","restaurants"] } }
        },
        {
          "name": "Create Restaurant (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
            "body": { "mode": "raw", "raw": "{ \"name\": \"My Test Restaurant\", \"address\": \"123 Main\", \"countryId\": 1 }" },
            "url": { "raw": "{{baseUrl}}/api/restaurants", "host": ["{{baseUrl}}"], "path": ["api","restaurants"] }
          }
        },
        {
          "name": "Delete Restaurant (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
            "url": { "raw": "{{baseUrl}}/api/restaurants/:id", "host": ["{{baseUrl}}"], "path": ["api","restaurants",":id"] }
          }
        }
      ]
    },
    {
      "name": "Menu Items",
      "item": [
        { "name": "Get Menu Items for Restaurant", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/menu-items/restaurant/:id", "host": ["{{baseUrl}}"], "path": ["api","menu-items","restaurant",":id"] } } }
      ]
    },
    {
      "name": "Orders",
      "item": [
        { "name": "Create Order", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ], "body": { "mode": "raw", "raw": "{ \"restaurantId\": 1, \"items\": [ { \"menuItemId\": 1, \"quantity\": 2 } ], \"paymentMethod\": \"CARD\" }" }, "url": { "raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api","orders"] } } }
      ]
    }
  ]
}
